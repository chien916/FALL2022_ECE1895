<%- include("../include/header") %>
<div class="container">
    <%- include("../include/partials/responseMessage") %>
   //add spinner!
    <div class="games hidden" id="game">
        <div class="games-top">
            <h1>Games</h1>
            <p class="hidden" id="no-games-found">没有找到游戏/No Games Found</p>
            <ul class="games-list" id="game-list"></ul>
            <div class="games-bottom">
                <button id="create-room">新建房间/Create Room</button>
                <button id="join-room">进入房间/Join Room</button>
            </div>
        </div>
    </div>
</div>

<div class="fixed-element-container form-container hidden" id="create-room-form-container">
    <form id="create-room-form">
        <div class="input-group">
            <label>房间号/Room ID</label>
            <input type="text" placeholder="Li's Private Room" id="room-id-input" required>
        </div>
        //skipped game time
        <div class="input-group input-group-checkbox">
            <label>设置密码/Add Password</label>
            <input type="text" id="add-password">
        </div>
        <div class="input-group disabled" id="password-input-group">
            <label>密码/Password</label>
            <input type="password" placeholder="********" id="room-password-create" required>
        </div>
        <button type="submit">创建房间/Create Room</button>
        //skipped join random room
        <span class="close-form" id="close-create-form">
            &#x2715;
        </span>
    </form>
</div>

<div class="fixed-element-container form-container hidden" id="join-room-form-container">
    <form id="join-room-form">
        <div class="input-group">
            <label>房间号/Room ID</label>
            <input type="text" placeholder="Li's Private Room" id="room-id" required>
        </div>
        <div class="input-group disabled" id="password-input-group">
            <label>密码/Password</label>
            <input type="password" placeholder="********" id="room-password-join" required>
        </div>
        <button type="submit">加入房间/Join Room</button>
        //skipped join random room
        <span class="close-form" id="close-join-form">
            &#x2715;
        </span>
    </form>
</div>

